{
  "name": "sick-fits-frontend",
  "version": "1.0.0",
  "description": "Sick Fits! An example React, GraphQL, Next and Apollo",
  "main": "index.js",
  "scripts": {
    "start": "next start $PORT",
    "build": "next build",
    "dev": "next -p 7777",
    "type": "tsc --watch",
    "lint": "esw -w --ext .tsx,.ts . --fix",
    "test": "NODE_ENV=test jest --watch",
    "gen": "graphql-codegen --config codegen.yml",
    "style": "npm-run-all --parallel type lint"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@babel/core": "^7.10.1",
    "@stripe/react-stripe-js": "^1.1.2",
    "@stripe/stripe-js": "^1.5.0",
    "apollo-boost": "^0.4.7",
    "apollo-client": "^2.6.8",
    "babel-core": "^6.26.3",
    "babel-plugin-styled-components": "^1.7.1",
    "date-fns": "^2.0.0-alpha.7",
    "downshift": "^5.4.2",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.3",
    "next": "^9.3.6",
    "next-redux-wrapper": "^6.0.0",
    "next-with-apollo": "^5.0.1",
    "nprogress": "^0.2.0",
    "prop-types": "^15.6.2",
    "react": "^16.13.1",
    "react-adopt": "^0.6.0",
    "react-apollo": "^2.2.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-transition-group": "^4.4.1",
    "redux": "^4.0.5",
    "reselect": "^4.0.0",
    "styled-components": "^5.1.1",
    "typescript": "^3.9.3",
    "waait": "^1.0.2"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.4",
    "@graphql-codegen/cli": "1.13.3",
    "@graphql-codegen/introspection": "1.13.3",
    "@graphql-codegen/typescript": "^1.13.3",
    "@graphql-codegen/typescript-operations": "1.13.3",
    "@graphql-codegen/typescript-react-apollo": "1.13.3",
    "@testing-library/dom": "^7.6.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.3",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.8",
    "@types/react-transition-group": "^4.4.0",
    "@types/styled-components": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "babel-jest": "^26.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "casual": "^1.6.2",
    "eslint": "^7.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "eslint-watch": "^6.0.1",
    "graphql-tools": "^4.0.0",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.0.0"
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
